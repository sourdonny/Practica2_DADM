<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/questionbg"
    tools:context=".Pregunta">


  <androidx.cardview.widget.CardView
      android:id="@+id/preguntaCardView"
      android:layout_width="410dp"
      android:layout_height="269dp"
      app:cardBackgroundColor="#00FFFFFF"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.04000002">

    <ImageView
        android:id="@+id/cajaImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/questionbox" />

    <TextView
        android:id="@+id/tituloTextView"
        android:layout_width="335dp"
        android:layout_height="172dp"
        android:fontFamily="@font/bungee"
        android:text="@string/pregunta1"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="29sp"
        android:translationX="20dp"
        android:translationY="50dp" />

  </androidx.cardview.widget.CardView>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="413dp"
      android:layout_height="286dp"
      android:layout_marginTop="4dp"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/preguntaCardView"
      app:layout_constraintVertical_bias="0.705">

    <Button
        android:id="@+id/respuesta1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/bungee"
        android:text="Button"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/respuesta2Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/bungee"
        android:text="Button" />

    <Button
        android:id="@+id/respuesta3Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/bungee"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/respuesta4Button"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:fontFamily="@font/bungee"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/respuesta3Button"
        app:layout_constraintEnd_toEndOf="parent" />

  </LinearLayout>

  <TextView
      android:id="@+id/puntosTextView"
      android:layout_width="161dp"
      android:layout_height="148dp"
      android:fontFamily="@font/bungee"
      android:lineSpacingExtra="0dp"
      android:text="0"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Display3"
      android:textColor="#000000"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/linearLayout"
      app:layout_constraintVertical_bias="0.65" />

  <ImageView
      android:id="@+id/preguntaImageView"
      android:layout_width="101dp"
      android:layout_height="105dp"
      android:layout_marginBottom="21dp"
      android:alpha="1"
      android:translationX="0dp"
      android:translationY="0dp"
      android:translationZ="10dp"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0"
      app:srcCompat="@drawable/mikey" />

</androidx.constraintlayout.widget.ConstraintLayout>